[netifyd]
syn_scan_protection = no
path_state_volatile = @volatilestatedir@
path_state_persistent = @persistentstatedir@
path_pid_file = ${path_state_volatile}/netifyd.pid

[protocols]
all=include

[capture-defaults]
capture_type = pcap

[proc-legacy]
enable = yes
plugin_library = @libdir@/libnetify-proc-post-legacy.so
conf_filename = ${path_state_persistent}/netify-proc-post-legacy.json

[proc-socket]
enable = yes
plugin_library = @libdir@/libnetify-proc-socket-legacy.so
conf_filename = ${path_state_persistent}/netify-proc-socket-legacy.json

[sink-legacy]
enable = no
plugin_library = @libdir@/libnetify-sink-post.so
conf_filename = ${path_state_persistent}/netify-sink-legacy.json

[sink-mqtt]
enable = no
plugin_library = @libdir@/libnetify-sink-mqtt.so
conf_filename = ${path_state_persistent}/netify-sink-mqtt.json

[sink-file]
enable = no
plugin_library = @libdir@/libnetify-sink-file.so
conf_filename = ${path_state_persistent}/netify-sink-file.json

[sink-socket]
enable = yes
plugin_library = @libdir@/libnetify-sink-socket.so
conf_filename = ${path_state_persistent}/netify-sink-socket.json
